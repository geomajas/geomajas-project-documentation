<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>org.geomajas</groupId>
		<artifactId>geomajas-parent</artifactId>
		<version>1.0.3</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.geomajas.documentation</groupId>
	<artifactId>docbook-enduserguide</artifactId>
	<version>1.8.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>User Guide for End Users</name>
	<description>User Guide for End Users</description>

	<scm>
		<connection>scm:svn:https://svn.geomajas.org/majas/trunk/documentation/enduserguide</connection>
		<developerConnection>scm:svn:https://svn.geomajas.org/majas/trunk/documentation/enduserguide</developerConnection>
		<url>https://svn.geomajas.org/majas/trunk/documentation/enduserguide</url>
	</scm>

	<repositories>
		<repository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
		</pluginRepository>
	</pluginRepositories>
	
	<developers>
		<developer>
			<id>joachimvda</id>
			<name>Joachim Van der Auwera</name>
			<email>joachim@geosparc.com</email>
			<roles>
				<role>Module maintainer</role>
			</roles>
		</developer>
		<developer>
			<id>pieterdg</id>
			<name>Pieter De Graef</name>
			<email>pieter.degraef@geosparc.com</email>
		</developer>
		<developer>
			<id>jandm</id>
			<name>Jan De Moerloose</name>
			<email>jan.demoerloose@geosparc.com</email>
		</developer>
	</developers>
	
	<build>
		<resources>
			<resource>
				<filtering>false</filtering>
				<directory>${project.build.directory}/docbkx/</directory>
				<excludes>
					<exclude>**/*.fo</exclude>
					<exclude>html/META-INF/**</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>explode-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.geomajas.documentation</groupId>
									<artifactId>geomajas-jdocbook-style</artifactId>
									<version>1.0.2-SNAPSHOT</version>
									<outputDirectory>${project.build.directory}/docbkx/html</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>remove-listing</id>
						<phase>clean</phase>
						<configuration>
							<tasks>
								<delete dir="src/docbkx/listing" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>copy-resources</id>
						<phase>generate-sources</phase>
						<configuration>
							<tasks>
								<copy todir="${project.build.directory}/docbkx/html">
									<fileset dir="${basedir}/src/docbkx">
										<exclude name="**/*.xml"/>
									</fileset>
								</copy>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.agilejava.docbkx</groupId>
				<artifactId>docbkx-maven-plugin</artifactId>
				<version>2.0.11</version>
				<dependencies>
					<dependency>
						<groupId>org.docbook</groupId>
						<artifactId>docbook-xml</artifactId>
						<version>4.4</version>
						<scope>runtime</scope>
					</dependency>
				</dependencies>

				<executions>
					<execution>
						<id>html-pdf</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate-pdf</goal>
							<goal>generate-html</goal>
						</goals>
						<configuration>
							<!-- per execution configuration -->
							<includes>master.xml</includes>
							<htmlStylesheet>css/geomajas.css</htmlStylesheet>
							<sectionAutolabel>1</sectionAutolabel>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<!-- shared configuration -->
					<xincludeSupported>true</xincludeSupported>
					<paperType>A4</paperType>
					<fop1Extensions>1</fop1Extensions>

					<highlightSource>1</highlightSource>
					<foCustomization>${project.build.directory}/docbkx/html/docbkx/docbook-fo.xsl</foCustomization>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>

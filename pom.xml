<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>org.geomajas</groupId>
		<artifactId>geomajas-parent</artifactId>
		<version>1.0.3</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.geomajas.documentation</groupId>
	<artifactId>docbook</artifactId>
	<version>1.7.1</version>
	<packaging>pom</packaging>
	<name>Geomajas documentation</name>
	<description>
		Geomajas is a component framework for building rich Internet applications (RIA) with sophisticated capabilities
		for the display, analysis and management of geographic information. It is a building block that allows
		developers to add maps and other geographic data capabilities to their web applications.
	</description>

	<scm>
		<connection>scm:svn:https://svn.geomajas.org/majas/tags/docbook-1.7.1/documentation</connection>
		<developerConnection>scm:svn:https://svn.geomajas.org/majas/tags/docbook-1.7.1/documentation</developerConnection>
		<url>https://svn.geomajas.org/majas/tags/docbook-1.7.1/documentation</url>
	</scm>

	<repositories>
		<repository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
			<snapshots><enabled>false</enabled></snapshots>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>Geomajas</id>
			<name>Geomajas repository</name>
			<url>http://maven.geomajas.org/</url>
			<snapshots><enabled>false</enabled></snapshots>
		</pluginRepository>
	</pluginRepositories>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>remove-listing</id>
						<phase>clean</phase>
						<configuration>
							<tasks>
								<delete dir="en-GB/listing" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>			
		</plugins>
	</build>

	<modules>
		<!--
		<module>style</module>
		<module>xslt</module>
		-->
		<module>gettingstarted</module>
		<module>devuserguide</module>
		<module>enduserguide</module>
		<module>contributorguide</module>
	</modules>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>	
	
</project>

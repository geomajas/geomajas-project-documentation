<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <!-- @extract-start WmsLayerSample, Wms layer configuration -->
    <bean name="wmsAgivInfo" class="org.geomajas.configuration.RasterLayerInfo">
        <property name="crs" value="EPSG:4326"/>
        <property name="maxExtent">
            <bean class="org.geomajas.geometry.Bbox">
                <property name="x" value="2.56"/>
                <property name="y" value="50.65"/>
                <property name="width" value="3.38"/>
                <property name="height" value="0.85"/>
            </bean>
        </property>
        <property name="resolutions">
            <list>
                <value>0.5</value>
                <value>0.25</value>
                <value>0.125</value>
                <value>0.0625</value>
                <value>0.03125</value>
                <value>0.015625</value>
                <value>0.0078125</value>
                <value>0.00390625</value>
                <value>0.001953125</value>
                <value>0.0009765625</value>
                <value>0.00048828125</value>
                <value>0.000244140625</value>
                <value>0.000122070312</value>
            </list>
        </property>
        <property name="dataSourceName" value="3" />
        <property name="tileWidth" value="512"/>
        <property name="tileHeight" value="512"/>
    </bean>

    <bean name="agiv" class="org.geomajas.layer.wms.WmsLayer" >
        <property name="layerInfo" ref="wmsAgivInfo" />

        <!-- When configuring your own applications, please do not use this WMS server -->
		<property name="baseWmsUrl" value="http://ogc.beta.agiv.be/ogc/wms/vha"/>        
        <property name="version" value="1.1.1"/>
        <property name="format" value="image/png"/>
        <property name="styles" value="Enkel_Bevaarbaar"/>
        <property name="parameters">
	        <list>
		        <bean class="org.geomajas.configuration.Parameter">
			        <property name="name" value="transparent"/>
			        <property name="value" value="true"/>
		        </bean>
		        <bean class="org.geomajas.configuration.Parameter">
			        <property name="name" value="sld"/>
			        <property name="value" value="http://ogc.beta.agiv.be/slds/VHA_WLAS_Only_MINCATC_0.xml"/>
		        </bean>
		        <bean class="org.geomajas.configuration.Parameter">
			        <property name="name" value="webkey"/>
			        <property name="value" value="HIDDEN_PASSWORD"/>
		        </bean>
		        <bean class="org.geomajas.configuration.Parameter">
			        <property name="name" value="gebruiker"/>
			        <property name="value" value="HIDDEN_USERNAME"/>
		        </bean>
	        </list>
        </property>
    </bean>
    <!-- @extract-end -->

</beans>